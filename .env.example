# Environment Variables for Kolel CRM System
# Copy this file to .env and update with your values

# Secret key for Flask sessions (CHANGE IN PRODUCTION!)
SECRET_KEY=your-very-secret-key-change-in-production

# Database URL
# For SQLite (default): sqlite:///kolel_crm.db
# For PostgreSQL: postgresql://username:password@localhost/kolel_crm
# For MySQL: mysql://username:password@localhost/kolel_crm
DATABASE_URL=sqlite:///kolel_crm.db

# Flask environment
FLASK_ENV=development
FLASK_DEBUG=True

# Admin user details (for initial setup)
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@kolel.local
ADMIN_PASSWORD=admin123

# Email settings (optional - for future notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Timezone
TIMEZONE=Asia/Jerusalem